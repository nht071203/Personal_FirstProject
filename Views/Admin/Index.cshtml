<div class="container mt-3">
    <h1 class="text-center">List Of Users</h1>
    <a asp-action="Create" class="btn btn-primary">Add New User</a>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th class="text-start">User ID</th>
                <th class="text-start">Full Name</th>
                <th class="text-start">Date Of Birth</th>
                <th class="text-start">Gender</th>
                <th class="text-start">Zipcode</th>
                <th class="text-start">Phone Number</th>
                <th class="text-start">Role</th>
                <th class="text-start">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="vertical-align: middle;">@item.UserId</td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                    <td>@item.Gender</td>
                    <td>@item.ZipCode</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Role</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@item.UserId" class="btn btn-outline-primary">Detail</a>
                        <a asp-action="Update" asp-route-id="@item.UserId" class="btn btn-outline-success">Update</a>
                        <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

