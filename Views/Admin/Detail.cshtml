@model User

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-xl px-4 mt-4">
    <hr class="mt-0 mb-4">
    <form class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2"
                        src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->
                    <button class="btn btn-primary" type="button">Upload new image</button>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="small mb-1">Phone Number</label>
                        <input readonly class="form-control form-control-lg" type="text" asp-for="PhoneNumber"
                            placeholder="PhoneNumber">
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1">Role</label>
                        <input readonly class="form-control form-control-lg" type="text" asp-for="Role"
                            placeholder="Role">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-8 h-100">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">
                    <div>
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1">Username</label>
                            <input readonly class="form-control form-control-lg" type="text" asp-for="Username"
                                placeholder="Username">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1">First name</label>
                                <input readonly class="form-control form-control-lg" type="text" asp-for="FirstName"
                                    placeholder="First Name">
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Last name</label>
                                <input readonly class="form-control form-control-lg" type="text" asp-for="LastName"
                                    placeholder="Last Name">
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Organization name</label>
                                <input readonly class="form-control form-control-lg" type="date" asp-for="DateOfBirth"
                                    placeholder="Date Of Birth">
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Gender</label>
                                <input readonly class="form-control form-control-lg" type="text" asp-for="Gender"
                                    placeholder="Gender">
                            </div>
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1">Email address</label>
                            <input readonly class="form-control form-control-lg" type="text" asp-for="Email"
                                placeholder="Email">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Phone number</label>
                                <input readonly class="form-control form-control-lg" type="text" asp-for="ZipCode"
                                    placeholder="ZipCode">
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Birthday</label>
                                <input readonly class="form-control form-control-lg" type="text"
                                    asp-for="IDCardPassportNumber" placeholder="Email">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="small mb-1">Address</label>
                            <input readonly class="form-control form-control-lg" type="text" asp-for="Address"
                                placeholder="Address">
                        </div>
                        <!-- Save changes button-->
                        <a asp-action="Update" asp-route-id="@Model.UserId" class="btn btn-outline-primary">Update</a>
                        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>