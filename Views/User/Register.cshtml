@model User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/styleAdmin.css" />
@* <link rel="stylesheet" href="~/css/site.css"/> *@
@* <link rel="stylesheet" href="~/css/login.css" /> *@

<style>
    #gender {
        top: 9px;
        left: 7px;
        font-size: 18px;
        padding: 0 10px;
        color: #acacac;
        pointer-events: none;
        transition: 0.15s all ease;
        border: 1px solid rgb(141, 168, 221);
        border-radius: 5px;
    }

    .form-group {
        margin: 0;
    }

    #role,
    #gender {
        transform: translate(5px, -22px);
        background-color: white;
        font-size: 12px;
        color: black;
    }
</style>
<a asp-controller="Login" asp-action="Login" class="btn btn-outline-primary mb-3">Back to Login</a>

<div class="container p-4 border border-primary shadow p-3 mb-5 bg-white rounded">
    @* <a asp-action="Index" class="btn btn-primary">Back to List</a> *@
    <h2 class="text-center">Register</h2>
    <form asp-action="Register" method="post">
        <div class="row">
            <div class="col-md-6 mt-4">
                <div class="form-group w-100">
                    <div class="form-hover">
                        <input class="form-control form-control-lg" type="text" asp-for="FirstName"
                            placeholder="First Name">
                        <label class="form-label">First Name</label>
                        <span asp-validation-for="FirstName" class="text-danger font-italic"></span>
                    </div>
                </div>
                <br>
                <div class="form-group w-100">
                    <div class="form-hover">
                        <input class="form-control form-control-lg" type="text" asp-for="LastName"
                            placeholder="Last Name">
                        <label class="form-label">Last Name</label>
                        <span asp-validation-for="LastName" class="text-danger font-italic"></span>
                    </div>
                </div>
                <br>
                <div class="form-group w-100">
                    <div class="form-hover">
                        <input class="form-control form-control-lg" type="date" asp-for="DateOfBirth"
                            placeholder="Date Of Birth">
                        <label class="form-label">Date Of Birth</label>
                        <span asp-validation-for="DateOfBirth" class="text-danger font-italic"></span>
                    </div>
                </div>
                <br>
                <div class="form-group w-100">
                    <div class="form-hover" style="padding: 5px 10px; 
                    border: 1px solid #ced4da;
                    border-radius: 5px;">
                        <label id="gender">Gender</label>
                        <input style="margin-top: 9px; position: relative; margin-left: -58px;" type="radio"
                            asp-for="Gender" value="Male"> <span
                            style="padding-right: 8px; font-size: 18px;">Male</span>
                        <input type="radio" asp-for="Gender" value="Female"> <span
                            style="padding-right: 8px; font-size: 18px;">Female</span>
                        <input type="radio" asp-for="Gender" value="Other"> <span
                            style="padding-right: 8px; font-size: 18px;">Other</span> <br>
                    </div>
                    <span asp-validation-for="Gender" class="text-danger font-italic"></span>
                </div>
                <br>
                <div class="form-group w-100">
                    <div class="form-hover">
                        <input class="form-control form-control-lg" type="text" asp-for="ZipCode" placeholder="ZipCode">
                        <label class="form-label">ZipCode</label>
                        <span asp-validation-for="ZipCode" class="text-danger font-italic"></span>
                    </div>
                </div>
                <br>
                <div class="form-group w-100">
                    <div class="form-hover">
                        <input class="form-control form-control-lg" type="text" asp-for="IDCardPassportNumber"
                            placeholder="ID Card/Passport Number">
                        <label class="form-label">ID Card/Passport Number</label>
                        <span asp-validation-for="IDCardPassportNumber" class="text-danger font-italic"></span>
                    </div>
                </div>
                <br>
            </div>
            <div class="col-md-6 mt-4">
                <div class="form-group w-100">
                    <div class="form-hover">
                        <input class="form-control form-control-lg" type="text" asp-for="PhoneNumber"
                            placeholder="Phone Number">
                        <label class="form-label">Phone Number</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger font-italic"></span>
                    </div>
                </div>
                <br>
                <div class="form-group w-100">
                    <div class="form-hover">
                        <input class="form-control form-control-lg" type="text" asp-for="Email" placeholder="Email">
                        <label class="form-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger font-italic"></span>
                    </div>
                </div>
                <br>
                <div class="form-group w-100">
                    <div class="form-hover">
                        <input class="form-control form-control-lg" type="text" asp-for="Username"
                            placeholder="Username">
                        <label class="form-label">Username</label>
                        <span asp-validation-for="Username" class="text-danger font-italic"></span>
                    </div>
                </div>
                <br>
                <div class="form-group w-100">
                    <div class="form-hover">
                        <input id="password" class="form-control form-control-lg" type="password" asp-for="PasswordHash"
                            placeholder="PasswordHash">
                        <label class="form-label">Password</label>
                        <span asp-validation-for="PasswordHash" class="text-danger font-italic"></span>
                    </div>
                </div>
                <br>
                <div class="form-group w-100">
                    <div class="form-hover">
                        <input id="confirmPassword" class="form-control form-control-lg" type="password"
                            placeholder="Confirm Password">
                        <label class="form-label">Confirm Password</label>
                        <span id="confirmPasswordError" class="text-danger font-italic"></span>
                    </div>
                </div>
                <br>
            </div>
        </div>
        <div class="form-group w-100 mb-4">
            <div class="form-hover">
                <input class="form-control form-control-lg" type="text" asp-for="Address" placeholder="Address">
                <label class="form-label">Address</label>
                <span asp-validation-for="Address" class="text-danger font-italic"></span>
            </div>
        </div>
        <input readonly class="form-control form-control-lg" type="hidden" asp-for="IsDeleted" placeholder="IsDeleted"
            value="false">
        <input readonly class="form-control form-control-lg" type="hidden" asp-for="Role" placeholder="Role"
            value="User">
        <input type="submit" value="Register" class="btn btn-outline-success">
        <input type="reset" value="Cancel" class="btn btn-outline-danger">
        <a asp-controller="Login" asp-action="Login" class="btn btn-outline-primary">Back to Login</a>
    </form>
</div>